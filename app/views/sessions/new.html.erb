<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Create an account</h2>
  </div>
  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <div class="space-y-6">
      <%= form_for(:session, url: login_path ) do |f| %>
        <div>
          <%= f.label :username, class: label_class %>
          <div class="mt-2">
            <%= f.text_field :username, class: input_class %>
          </div>
        </div>
        <div>
          <%= f.label :email, class: label_class %>
          <div class="mt-2">
            <%= f.email_field :email, class: input_class %>
          </div>
        </div>
        <div class="mt-2">
          <%= f.submit 'Login', class: form_button_class %>
        </div>
      <% end %>
    </div>
    <p class="mt-10 text-center text-sm text-gray-500">
      No account yet?
      <%= link_to 'Register Here',new_user_path, class:"font-semibold leading-6 text-indigo-600 hover:text-indigo-500"%>
    </p>
  </div>
</div>
